<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/open_sans_semi_bold"
         android:textColor="@color/colorAccent"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/marginProductDetails"
        android:background="@drawable/bg_orange_btn_curve"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="@string/edit_string"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_edit"
        android:layout_marginStart="@dimen/marginProductDetails"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/marginProductDetails"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_my_order"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow_btn_curve"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="@string/my_order_string"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_myaddress"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow_btn_curve"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="@string/my_address_string"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow_btn_curve"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="@string/notificatoin_string"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_btns">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginProductDetails"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/marginProductDetails"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_primarydark_round"
                android:orientation="vertical"
                android:padding="12dp">

                <RelativeLayout
                    android:id="@+id/rl_fav"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_heart_profile" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:duplicateParentState="true"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/favourite_item_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_terms"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"

                        android:duplicateParentState="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_terms_confition" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:duplicateParentState="true"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/terms_and_condition_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_privacy" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:duplicateParentState="true"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_policy_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_refund"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_refund" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:duplicateParentState="true"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/refund_policy_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_gift" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:duplicateParentState="true"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/birthday_gift"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginProductDetails"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/marginProductDetails"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_primarydark_round"
                android:orientation="vertical"
                android:padding="12dp">

                <RelativeLayout
                    android:id="@+id/rl_language"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_profile_language" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/langguage_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_change_pass" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/change_password"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_push_not"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_push_not" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/push_notification_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <Switch
                        android:id="@+id/switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:checked="true"
                        android:theme="@style/SwitchTheme"
                        android:switchMinWidth="56dp"
                        android:textOff="@string/off_string"
                        android:textOn="@string/on_string" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_contact_us" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/contact_us"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_log_out" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="52dp"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:text="@string/log_out_string"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
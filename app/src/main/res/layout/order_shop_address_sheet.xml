<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_color_bottom_sheet"
    android:clickable="true"
    android:paddingBottom="44dp"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/img_close_shop_address"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_close_sheet" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_close_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_name"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


        <TextView
                android:id="@+id/tv_store_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_address"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_store_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_store_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_msg_shop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_store_address"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_message_shop" />

        <ImageView
            android:id="@+id/btnCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_store_address"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/img_msg_shop"
            android:src="@drawable/ic_call_shop" />
    </RelativeLayout>
</RelativeLayout>
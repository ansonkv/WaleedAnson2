<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/filter_cat_image_size"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_filter_category_selector"
    android:paddingEnd="12dp">

    <View
        android:layout_width="@dimen/filter_cat_image_size"
        android:layout_height="@dimen/filter_cat_image_size"
        android:layout_centerVertical="true"
        android:background="@drawable/category_bg_baby_girl" />

    <ImageView
        android:id="@+id/img_category"
        android:layout_width="@dimen/filter_cat_image_size"
        android:layout_height="@dimen/filter_cat_image_size"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:src="@drawable/ic_boys_all" />

    <TextView
        android:id="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/img_category"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/textColorDark"
        android:textSize="18sp" />
</RelativeLayout>
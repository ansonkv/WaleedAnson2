<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_apply_couppon_sheet"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_close_sheet"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_sheet" />

        <TextView
            android:id="@+id/tv_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:text="@string/enter_coupon_code"
            android:textColor="@color/textColorDark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_coupon"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_edit_text_coupon_round"
            android:fontFamily="@font/open_sans_regular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/textColorDark" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/et_coupon"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_green_btn"
            android:fontFamily="@font/open_sans_regular"
            android:text="@string/apply_string"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
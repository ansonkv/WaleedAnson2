<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_left"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/toolbar_page_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_waleed_toolbar" />

        <TextView
            android:id="@+id/toolbar_page_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:textColor="@color/textColorDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/btn_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cart_toolbar" />

        <ImageButton
            android:id="@+id/btn_language"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/btn_cart"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_lang_toolbar" />

        <TextView
            android:id="@+id/tv_cart_count_toolbar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-16dp"
            android:layout_toStartOf="@+id/btn_cart"
            android:background="@drawable/bg_green_round"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>